<% rate_name = "controlled_patients_rate" %>
<%arr = []%>
<%header = ["Facilities", "Total assigned", "Total registered","6-month change"]%>
<% (@start_period..@period).each do |period| %>
<% header << period #MONTHLY PERCENTAGE HEADER%>
<% header << "Ratio" #MONTHLY RATIO HEADER %>
<%end%>
<%arr << header%>
<% @display_sizes.each_with_index do |size, i| %>
  <% row = []%>
  <% six_month_rate_change = facility_size_six_month_rate_change(@stats_by_size[size][:periods], rate_name) %>
  <% row << "All #{Facility.localized_facility_size(size)}s" #FACILITIES%>
  <% row << number_or_zero_with_delimiter(@stats_by_size[size][:periods][@period][:cumulative_assigned_patients]) %>
  <% row << number_or_zero_with_delimiter(@stats_by_size[size][:periods][@period][:cumulative_registrations]) %>
  <% row <<  number_to_percentage(six_month_rate_change, precision: 0) #6-MONTH CHANGE %>
  <% @stats_by_size[size][:periods].each_pair do |period, data| %>
    <% controlled_patients_rate = data["controlled_patients_rate"] %>
    <% row << number_to_percentage(controlled_patients_rate || 0, precision: 0) %>
    <% row << "#{data["controlled_patients"]} / #{data["adjusted_patient_counts"]}" %>
  <% end %>
  <%arr << row%>
  <% @data_for_facility.each do |_, facility_data| %>
    <% sub_row = []%>
    <% facility = facility_data.region.source %>
    <% next if facility.facility_size != size #Explain why this is necessary??? structure of DB %>
    <% six_month_rate_change = six_month_rate_change(facility, "controlled_patients_rate") %>
    <% sub_row << facility.name %>
    <% sub_row << number_or_zero_with_delimiter(facility_data["cumulative_assigned_patients"].values.last) %>
    <% sub_row << number_or_zero_with_delimiter(facility_data["cumulative_registrations"].values.last) %>
    <% sub_row << number_to_percentage_with_symbol(six_month_rate_change, precision: 0) %>
    <% (@start_period..@period).each do |period| %>
      <% controlled_patients_rate = facility_data["controlled_patients_rate"][period] %>
      <% sub_row << number_to_percentage(controlled_patients_rate || 0, precision: 0) %>
      <% sub_row << "#{facility_data["controlled_patients"][period]} / #{facility_data["adjusted_patient_counts"][period]}" %>
    <% end %>
    <%arr << sub_row%>
  <% end %>
  <% arr << [] if i === 0%>
<%end%>
<%arr.each do |row|%>
  <%= row.join(",")%>
<%end%>