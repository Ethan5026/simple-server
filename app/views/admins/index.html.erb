<div class="page-header">
  <h1 class="page-title">Admins</h1>
  <nav class="page-nav">
    <div class="dropdown">
      <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Add new admin
      </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Choose access level of the new admin</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div class="modal-body">
                    <% if policy(:invitation).invite_owner? %>
                        <div class="row mb-3">
                            <div class="col-5"><%= link_to 'Owner', new_admin_invitation_path(role: 'owner'), class: "btn btn-sm btn-outline-primary btn-block" %></div>
                            <div class="col-7"><strong>Owners</strong> can edit and add new admins. Only top level people should be Owners.</div>
                        </div>
                    <% end %>
                    <% if policy(:invitation).invite_organization_owner? %>
                        <div class="row mb-3">
                            <div class="col-5"><%= link_to 'Organization Owner', new_admin_invitation_path(role: 'organization_owner'), class: "btn btn-sm btn-outline-primary btn-block" %></div>
                            <div class="col-7">Organization owners can...</div>
                        </div>
                    <% end %>
                    <% if policy(:invitation).invite_supervisor? %>
                        <div class="row mb-3">
                            <div class="col-5"><%= link_to 'Supervisor', new_admin_invitation_path(role: 'supervisor'), class: "btn btn-sm btn-outline-primary btn-block" %></div>
                            <div class="col-7">Supervisors can...</div>
                        </div>
                    <% end %>
                    <% if policy(:invitation).invite_analyst? %>
                        <div class="row mb-3">              
                            <div class="col-5"><%= link_to 'Analyst', new_admin_invitation_path(role: 'analyst'), class: "btn btn-sm btn-outline-primary btn-block" %></div>
                            <div class="col-7">Analysts can...</div>
                        </div>
                    <% end %>
                    <% if policy(:invitation).invite_counsellor? %>
                        <div class="row">
                            <div class="col-5"><%= link_to 'Counsellor', new_admin_invitation_path(role: 'counsellor'), class: "btn btn-sm btn-outline-primary btn-block" %></div>
                            <div class="col-7">Counsellors can...</div>
                        </div>
                    <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>




<% @admins.each do |admin| %>
    <div class="card">
        <div class="row">
            <div class="col col-6">
                <h5>
                    <%= link_to admin.email, admin %>
                </h5>
                <div class="mt-2"><i class="fas fa-shield-alt light mr-2"></i> <%= admin.role.humanize %></div>
            </div>
            <div class="col col-6 text-right">
                <% if admin.invited_to_sign_up? %>
                    <span class="badge badge-success badge-pill mr-4 mt-1" style="font-size: 90%; font-weight: normal;">Invite sent</span>
                <% end %>
                <% if policy(admin).edit? %>
                  <%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-sm btn-outline-primary" %>
                <% end %>
                <% if policy(admin).destroy? %>
                  <%= link_to 'Delete', admin, method: :delete, data: { confirm: "Are you sure you want to delete #{admin.email}?" }, class: "btn btn-sm btn-outline-danger" %>
                <% end %>
            </div>
        </div>
    </div>
<% end %>
