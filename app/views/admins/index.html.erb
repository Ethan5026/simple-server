<div class="page-header">
  <h1 class="page-title">Admins</h1>
  <nav class="page-nav">
    <div class="dropdown">
      <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Add new admin
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% if policy(:invitation).invite_owner? %>
          <%= link_to 'Owner', new_admin_invitation_path(role: 'owner'), class: "dropdown-item" %>
        <% end %>
        <% if policy(:invitation).invite_organization_owner? %>
          <%= link_to 'Organization Owner', new_admin_invitation_path(role: 'organization_owner'), class: "dropdown-item" %>
        <% end %>
        <% if policy(:invitation).invite_supervisor? %>
          <%= link_to 'Supervisor', new_admin_invitation_path(role: 'supervisor'), class: "dropdown-item" %>
        <% end %>
        <% if policy(:invitation).invite_analyst? %>
          <%= link_to 'Analyst', new_admin_invitation_path(role: 'analyst'), class: "dropdown-item" %>
        <% end %>
        <% if policy(:invitation).invite_counsellor? %>
          <%= link_to 'Counsellor', new_admin_invitation_path(role: 'counsellor'), class: "dropdown-item" %>
        <% end %>
      </div>
    </div>
  </nav>
</div>




<% @admins.each do |admin| %>
    <div class="card">
        <div class="row">
            <div class="col col-6">
                <h5>
                    <%= link_to admin.email, admin %>
                </h5>
                <div><%= admin.role.humanize %></div>
            </div>
            <div class="col col-6 text-right">
                <% if admin.invited_to_sign_up? %>
                    <span class="badge badge-info mr-4">Invite sent</span>
                <% end %>
                <% if policy(admin).edit? %>
                  <%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-sm btn-outline-primary" %>
                <% end %>
                <% if policy(admin).destroy? %>
                  <%= link_to 'Delete', admin, method: :delete, data: { confirm: "Are you sure you want to delete #{admin.email}?" }, class: "btn btn-sm btn-outline-danger" %>
                <% end %>
            </div>
        </div>
    </div>
<% end %>
