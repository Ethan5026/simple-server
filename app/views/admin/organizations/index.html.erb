<div class="page-header">
  <h1 class="page-title">Organizations</h1>
  <nav class="page-nav">
    <% if policy(Organization).new? %>
      <%= link_to 'Add Organization', new_admin_organization_path, class: "btn btn-sm btn-primary" %>
    <% end %>
  </nav>
</div>

   

    
        <% @organizations.each do |organization| %>
        <div class="card">
            <div class="row">
                <div class="col-10">
                    <h5>
                      <% if policy(organization).edit? %>
                        <%= link_to organization.name, edit_admin_organization_path(organization) %>
                      <% else %>
                        <%= organization.name %>
                      <% end %>
                    </h5>
                  <div class="desc"><%= organization.description %>. <%= organization.facility_groups.count %> facility groups, <%= organization.facilities.count %> facilities, <%= organization.users.count %> users.</div>
                </div>
                <div class="col-2 text-right">
                    <% if policy(organization).destroy? %>
                      <%= link_to 'Delete', [:admin, organization], method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete #{organization.name}?" } %>
                    <% end %>
                </div>
            </div>   
        </div>
        <% end %>
      
