<div class="page-header">
  <h1 class="page-title">Protocols</h1>
  <nav class="page-nav">
    <% if policy(Protocol).new? %>
      <%= link_to 'New protocol', new_admin_protocol_path, class: "btn btn-sm btn-primary" %>
    <% end %>
  </nav>
</div>
<div class="card">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>Protocol</th>
          <th class="nowrap text-center">Follow up days</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @protocols.each do |protocol| %>
          <tr>
            <td class="nowrap"><%= link_to protocol.name, [:admin, protocol] %></td>
            <td class="text-center"><%= protocol.follow_up_days %></td>
            <td class="text-right">
            <% if policy(protocol).edit? %>
              <%= link_to 'Edit', edit_admin_protocol_path(protocol), class: "btn btn-sm btn-outline-primary" %>
            <% end %>
            <% if policy(protocol).destroy? %>
              <%= link_to 'Delete', [:admin, protocol], method: :delete, data: { confirm: "Are you sure you want to delete #{protocol.name}?" }, class: "btn btn-sm btn-outline-danger" %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>