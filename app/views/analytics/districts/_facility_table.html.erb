<section class="table-compact">
  <div class="table-responsive">
    <table>
      <thead>
      <tr>
        <th colspan="2"></th>
        <th class="row-label">Registered Patients<br><strong>Total</strong></th>
      </tr>
      </thead>
      <tbody>

      <tr class="row-total">
        <td class="row-rank row-total"></td>
        <td class="row-title row-total">All
        <td class="row-enrolled text-green row-total">
          <%= dash_if_zero(analytics[:registered_patients_by_facility][:total]) %>
        </td>
        <td class="row-spacer">&nbsp;</td>
        <td class="row-spacer">&nbsp;</td>
      </tr>

      <% analytics[:registered_patients_by_facility][:patients_by_facility].each do |patient| %>
        <tr>
          <td class="row-rank"></td>

          <td class="row-title">
            <%= link_to patient.facility_name, analytics_facility_path(patient.facility_id,
                                                                       from_time: from_time,
                                                                       to_time: to_time) %>
          </td>

          <td class="row-enrolled text-green"><%= dash_if_zero(patient.registered_patients) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
